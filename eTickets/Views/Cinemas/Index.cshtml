@*Define model (the data type youn want to display in this file)*@
@*Here: List of cinemas (but should be as IEnumerable (why?)), because this is what we take in the controller as parameter (var data)*@

@model IEnumerable<Cinema>


@*Define ViewData
    (the data that you want have in the browser tab, or
    properties tha  you want to use in your view, etc.)*@

@{
    ViewData["Title"] = "List of Cinemas";
}

@*ViewData["Title"] is used in the _Layout.cshtml file (see element <title> in the <head>)*@



@*Write code*@
<div class="row">
    <div class="col-md-8 offset-2">

        <table class="table">
            <thead>
                @*To center the text in table header insert class with value text-center*@
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit </a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>  Details </a>
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i> Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
